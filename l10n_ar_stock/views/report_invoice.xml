<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="l10n_ar_sale_stock_report_invoice_document" model="ir.ui.view">
        <!-- <field name="name">sale_stock.move.form.inherit</field>
        <field name="model">account.move</field> -->
        <field name="inherit_id" ref="account.report_invoice_document"/>
        <field name="arch" type="xml">
            <table name="invoice_line_table" position="attributes">
                <attribute name="class" add="w-100" separator=" "></attribute>
            </table>
            <xpath expr="//table[@name='invoice_line_table']/thead/tr" position="inside">
                <th class="text-right" t-if="any(o.invoice_line_ids.sale_line_ids.move_ids.move_line_ids.lot_id.mapped('dispatch_number'))">
                    <span>Dispatch Number</span>
                </th>
            </xpath>
            <xpath expr="//table[@name='invoice_line_table']/tbody/t[4]/tr" position="inside">
                <td class="text-right" t-if="any(o.invoice_line_ids.sale_line_ids.move_ids.move_line_ids.lot_id.mapped('dispatch_number'))">
                    <t t-set="dispatch_number" t-value="line.sale_line_ids.move_ids.move_line_ids.lot_id.dispatch_number"/>
                    <t t-if="dispatch_number">
                        <t t-esc="dispatch_number"/>                        
                    </t>
                </td>
            </xpath>
        </field>
    </record>

</odoo>
